<div class="card-header">NEW POST</div>
<div class="card-block">
  <%= form_for @post, class: 'form' do |f|     %>
    <div class="form-group">
      <label>Title of post</label>
      <%= f.text_field :title, class: "form-control", size: 65, placeholder: "Enter the title of post" %>
    </div>
    <div class="form-group">
      <label>Text of post</label>
      <%= f.text_area :text, class: "form-control", cols: 100, rows: 20, placeholder: "Enter the text of post" %>
    </div>
    <div class="form-group">
      <label>File</label>
      <%= f.file_field :file, class: "btn" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create", class: "btn btn-success" %>
    </div>
  <% end %>
</div>